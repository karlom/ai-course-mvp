# Fill these and rename to .env

# Node API
API_PORT=3000
DATABASE_URL=postgres://ai_user:ai_pass@postgres:5432/ai_course

# Redis (BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO (S3 compatible)
S3_ENDPOINT=minio:9000
S3_BUCKET=generated-content
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# Siliconflow GLM (硅基流动) - fill from your infra
SILICONFLOW_API_KEY=your_siliconflow_api_key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn

# Embeddings model name (Qwen3-Embedding-4B)
EMBEDDING_MODEL_NAME=Qwen3-Embedding-4B

# seedream / qwan (image)
SEEDREAM_API_KEY=
QWAN_API_KEY=

# Python worker settings
PYTHON_WORKER_HOST=python-worker
PYTHON_WORKER_PORT=8001

OUTPUT_DIR=/tmp/outputs
